<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="warning_message_view" model="ir.ui.view">
            <field name="name">warning.message.form.view</field>
            <field name="model">warning.message</field>
            <field name="arch" type="xml">
            <form>
                <group>
                    <field name="message_text"/>
                </group>
                <footer>
                    <button string="OK" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
            </field>
        </record>
</odoo>